<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\NetCord.Hosting.AspNetCore\NetCord.Hosting.AspNetCore.csproj" />
    <ProjectReference Include="..\..\NetCord.Hosting.Services\NetCord.Hosting.Services.csproj" />
    <ProjectReference Include="..\..\NetCord.Hosting\NetCord.Hosting.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="libsodium.dll" Condition="Exists('appsettings.json')">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
